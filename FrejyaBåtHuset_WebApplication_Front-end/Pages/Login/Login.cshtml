@page
@model FrejyaBåtHuset_WebApplication_Front_end.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="card" style="width:420px;margin:50px auto;">
    <div class="card-header">
        Login
    </div>
    <div class="card-body">
        <div>
            <div>
                <div>
                    <p>
                        If User not already Registered then click on <strong><a asp-page="../UserDetails/CreateUser">Register</a></strong>
                    </p>
                </div>
                <hr style="margin-bottom:0px;"/>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (Model.Message != "")
                    {
                        <label class="text-danger">@Model.Message</label>
                    }
                    <div class="form-group">
                        <label asp-for="login.EmailId" class="Control-Label"></label>
                        <span class="text-danger">*</span>
                        <input asp-for="login.EmailId" type="email" class="form-control" />
                        <span asp-validation-for="login.EmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="login.Password" class="Control-Label"></label>
                        <span class="text-danger">*</span>
                        <input asp-for="login.Password" type="password" class="form-control" />
                        <span asp-validation-for="login.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group float-right" style="margin-top:10px;">
                        <input type="submit" value="Login" style="width:200px;" class="btn btn-lg btn-primary" />
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

