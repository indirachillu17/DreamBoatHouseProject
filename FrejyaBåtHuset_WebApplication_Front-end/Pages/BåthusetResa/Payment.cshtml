@page
@model FrejyaBåtHuset_WebApplication_Front_end.Pages.BåthusetResa.PaymentModel
@{
    ViewData["Title"] = "Payment";
}

    <div class="card" style="width:500px;margin:50px auto;">
        <div class="card-header">
            Payment
        </div>
        <div class="card-body">
            
            <div >
                <div>
                    <form method="post">
                        <div class="alert alert-warning" role="alert">
                            Please pay here for amount @Model.båtHusetBokningSummary.TotalPrice
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="båtHusetBokningSummary.BåtHusetBokningTransactionID" class="form-control" maxlength="20" />
                        <div class="form-group">
                            <label asp-for="payment.Name" class="control-label"></label>
                            <input asp-for="payment.Name" class="form-control" maxlength="20" />
                            <span asp-validation-for="payment.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="payment.CardNo" class="control-label"></label>
                            <input asp-for="payment.CardNo" class="form-control" maxlength="16" />
                            <span asp-validation-for="payment.CardNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="payment.ExpiryDate" class="control-label"></label>
                            <input asp-for="payment.ExpiryDate" class="form-control" maxlength="5" />
                            <span asp-validation-for="payment.ExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="payment.CVVCode" class="control-label"></label>
                            <input asp-for="payment.CVVCode" class="form-control" maxlength="3" />
                            <span asp-validation-for="payment.CVVCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Pay" style="width:200px" class="btn btn-lg btn-success" />
                            <a href="/BåthusetResa/BåtHusetBokning">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

        
